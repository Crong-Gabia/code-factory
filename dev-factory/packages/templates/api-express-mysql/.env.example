# App
PORT=3000
NODE_ENV=development

# Database
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=app
MYSQL_USER=app
MYSQL_PASSWORD=app
MYSQL_ROOT_PASSWORD=root

# Prisma
DATABASE_URL="mysql://app:app@mysql:3306/app"

# Optional: Corporate CA (Prisma engine download)
# If you see: "self-signed certificate in certificate chain"
# export your corporate root CA as PEM, base64-encode (single line), and set here.
CA_CERT_PEM_B64=
