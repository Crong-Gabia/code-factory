{
  "name": "boilerplate",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier -w .",
    "test": "node ./scripts/run-tests.cjs",
    "ruler:check": "npx -y @intellectronica/ruler apply --dry-run --local-only --no-mcp --no-gitignore --agents opencode",
    "verify": "npm run ruler:check && npm run lint && npm run test",
    "process": "bash ./scripts/process.sh",
    "process:watch": "bash ./scripts/watch-roadmap.sh",
    "ai:prompt": "bash ./scripts/ai/generate-opencode-prompt.sh",
    "ai:task": "bash ./scripts/ai/task.sh",
    "ai:init-plan": "bash ./scripts/ai/init-plan.sh",
    "ai:run": "bash ./scripts/ai/run-opencode.sh",
    "ai:demo": "bash ./scripts/ai/demo.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@intellectronica/ruler": "^0.3.28",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
